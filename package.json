{
  "name": "convos-backend",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "buf:generate": "buf generate",
    "build": "bun build src/index.ts --outfile index.js --target bun --external @xmtp/node-bindings",
    "check": "bun typecheck && bun format:check && bun lint",
    "clean": "bun clean:dbs && rimraf node_modules",
    "clean:dbs": "rimraf **/*.db3* ||:",
    "dev": "bun --watch run src/index.ts",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "lint": "eslint .",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "start": "bun run src/index.ts",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.750.0",
    "@aws-sdk/s3-request-presigner": "^3.750.0",
    "@bufbuild/protobuf": "^2.2.3",
    "@connectrpc/connect": "^2.0.1",
    "@connectrpc/connect-node": "^2.0.1",
    "@prisma/client": "^6.3.1",
    "@xmtp/node-sdk": "^0.0.47",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "express-rate-limit": "^7.5.0",
    "firebase-admin": "^13.1.0",
    "helmet": "^8.0.0",
    "jose": "^5.10.0",
    "mime-types": "^2.1.35",
    "prisma": "^6.3.1",
    "thirdweb": "^5.88.2",
    "uint8array-extras": "^1.4.0",
    "uuid": "^11.0.5",
    "viem": "^2.23.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.50.0",
    "@bufbuild/protoc-gen-es": "^2.2.3",
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@types/bun": "^1.2.1",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/mime-types": "^2.1.4",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "prettier-plugin-packagejson": "^2.5.7",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
